{
  "name": "api3-subgraphs",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "generate-abi": "solcjs node_modules/@api3/airnode-protocol-v1/contracts/$AIRNODE_CONTRACT_PATH --abi --include-path node_modules/ --base-path . --output-dir subgraphs/$SUBGRAPH_PATH/abis",
    "api3-events:generate-abis": "cross-env SUBGRAPH_PATH=api3-events AIRNODE_CONTRACT_PATH=api3-server-v1/Api3ServerV1.sol yarn generate-abi & cross-env SUBGRAPH_PATH=api3-events AIRNODE_CONTRACT_PATH=utils/PrepaymentDepository.sol yarn generate-abi",
    "overwrite-subgraph-datasources": "node ./scripts/overwrite-subgraph-datasources.js",
    "generate-types": "graph codegen subgraphs/$SUBGRAPH_PATH/src/subgraph.yaml --output-dir subgraphs/$SUBGRAPH_PATH/types",
    "build": "graph build subgraphs/$SUBGRAPH_PATH/src/subgraph.yaml --output-dir subgraphs/$SUBGRAPH_PATH/build",
    "register": "graph create $SUBGRAPH_NAME --node $GRAPH_NODE",
    "unregister": "graph remove $SUBGRAPH_NAME --node $GRAPH_NODE",
    "deploy": "graph deploy $SUBGRAPH_NAME subgraphs/$SUBGRAPH_PATH/src/subgraph.yaml --ipfs $IPFS_NODE --node $GRAPH_NODE --version-label $VERSION_LABEL --output-dir subgraphs/$SUBGRAPH_PATH/build",
    "deploy:fresh": "yarn overwrite-subgraph-datasources && yarn generate-types && yarn build && yarn register && yarn deploy"
  },
  "bin": {
    "deploy-subgraph": "./scripts/deploy-subgraph.sh"
  },
  "dependencies": {
    "@api3/airnode-protocol-v1": "2.7.1",
    "@graphprotocol/graph-cli": "^0.51.2",
    "@graphprotocol/graph-ts": "0.29.3",
    "cross-env": "^7.0.3",
    "js-yaml": "^4.1.0",
    "solc": "0.8.17"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.3.1",
    "matchstick-as": "0.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
